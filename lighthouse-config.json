{
    "extends": [
        "lighthouse:default"
    ],
    "settings": {
        "onlyCategories": [
            "performance",
            "accessibility",
            "best-practices",
            "seo"
        ],
        "skipAudits": [
            "uses-http2"
        ],
        "throttling": {
            "rttMs": 40,
            "throughputKbps": 10240,
            "requestLatencyMs": 0,
            "downloadThroughputKbps": 0,
            "uploadThroughputKbps": 0,
            "cpuSlowdownMultiplier": 1
        },
        "budgets": [
            {
                "path": "/*",
                "timings": [
                    {
                        "metric": "first-contentful-paint",
                        "budget": 1800
                    },
                    {
                        "metric": "largest-contentful-paint",
                        "budget": 2500
                    },
                    {
                        "metric": "cumulative-layout-shift",
                        "budget": 0.1
                    },
                    {
                        "metric": "total-blocking-time",
                        "budget": 200
                    },
                    {
                        "metric": "speed-index",
                        "budget": 3000
                    }
                ],
                "resourceSizes": [
                    {
                        "resourceType": "script",
                        "budget": 200
                    },
                    {
                        "resourceType": "stylesheet",
                        "budget": 50
                    },
                    {
                        "resourceType": "image",
                        "budget": 500
                    },
                    {
                        "resourceType": "font",
                        "budget": 100
                    },
                    {
                        "resourceType": "total",
                        "budget": 1000
                    }
                ],
                "resourceCounts": [
                    {
                        "resourceType": "script",
                        "budget": 10
                    },
                    {
                        "resourceType": "stylesheet",
                        "budget": 5
                    },
                    {
                        "resourceType": "font",
                        "budget": 3
                    },
                    {
                        "resourceType": "third-party",
                        "budget": 5
                    }
                ]
            }
        ]
    }
}